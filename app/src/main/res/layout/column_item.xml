<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:duplicateParentState="true"
        android:forceHasOverlappingRendering="false"
        android:foreground="@drawable/card_view_selector"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="4dp"

        card_view:cardPreventCornerOverlap="true"

        card_view:cardElevation="0dp"
        card_view:cardMaxElevation="0dp"

        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="4dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/root"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/name_topic_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="4dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/widget_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_weight="1" />


                    <TextView
                        android:id="@+id/widget_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="topic"
                        android:layout_weight="1" />

                </LinearLayout>

                <TextView
                    android:id="@+id/widget_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minWidth="48dp"
                    android:paddingRight="4dp"
                    android:singleLine="false"
                    android:text="value"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Switch
                    android:id="@+id/widget_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"

                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:visibility="gone" />

                <com.ravendmaster.onecore.customview.MyButton
                    android:id="@+id/widget_button"
                    labelOn="button"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:visibility="gone" />

                <com.ravendmaster.onecore.customview.Meter
                    android:id="@+id/widget_meter"
                    labelOn="button"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:visibility="gone" />

                <com.ravendmaster.onecore.customview.RGBLEDView
                    android:id="@+id/widget_RGBLed"
                    enabled="false"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imageView_combo_box_selector"
                    android:layout_width="32dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/combo_box_selector2"
                    android:padding="4dp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imageView_js"
                    android:layout_width="16dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/js" />

                <ImageView
                    android:id="@+id/imageView_edit_button"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_context_menu" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/seek_bar_group"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/widget_seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />

            </LinearLayout>


            <com.ravendmaster.onecore.customview.Graph
                android:id="@+id/widget_graph"
                android:layout_width="wrap_content"
                android:layout_height="128dp"
                android:layout_marginRight="4dp"
                android:layout_weight="2"
                android:clickable="false"
                android:layout_marginLeft="4dp" />

            <com.ravendmaster.onecore.customview.ButtonsSet
                android:id="@+id/widget_buttons_set"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="2"
                android:clickable="false"
                android:paddingBottom="7dp"
                android:paddingTop="7dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
